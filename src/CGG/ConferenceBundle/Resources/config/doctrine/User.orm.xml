<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="CGG\ConferenceBundle\Entity\User" table="User" repository-class="CGG\ConferenceBundle\Entity\UserRepository">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>
        <field name="salt" type="string" length="255" unique="true"/>
        <field name="username" type="string" length="25" unique="true" />
        <field name="password" type="string" length="255" unique="true"/>
        <field name="email" type="string" length="255" unique="true"/>
        <field name="isActive" type="boolean"/>
        <!--TODO : ajouter join table, join column... pour tenter de fixer l'erreur does not contain the required 'inversedBy-->
        <many-to-many target-entity="Role" field="roles" inversed-by="users" />
    </entity>
</doctrine-mapping>