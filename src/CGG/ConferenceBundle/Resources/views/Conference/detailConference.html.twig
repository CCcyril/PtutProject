{% extends "::conferenceBase.html.twig" %}

{% block headbandTitle %}
    <h1>{{ parent() }}</h1>
{% endblock %}

{% block headbandText %}
    <span>{{ parent() }}</span>
{% endblock %}

{% block menu %}
    <div id="navbar" class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
            {% for menuItem in menuItems %}
                {% if menuItem.children is null %}
                    {% if menuItem.depth == 1 %}
                    <li class="btn first
                                {% if (conference.id ~ "/" ~ menuItem.page.id) in app.request.uri %}
                                    active
                                {% endif %}
                        ">
                    {% elseif menuItem.depth == menuItems|length %}
                        <li class="btn last
                                {% if (conference.id ~ "/" ~ menuItem.page.id) in app.request.uri %}
                                    active
                                {% endif %}
                        ">
                    {% else %}
                        <li class="btn
                                {% if (conference.id ~ "/" ~ menuItem.page.id) in app.request.uri %}
                                    active
                                {% endif %}
                        ">
                    {% endif %}
                    <a href="{{ path('cgg_conference_detailConference', {'idConference': conference.id, 'idPage':menuItem.page.id}) }}"> {{ menuItem.title }}</a>
                    </li>
                {% else %}
                    {% if menuItem.depth == 1 %}
                    <li class="btn first
                                {% if (conference.id ~ "/" ~ menuItem.page.id) in app.request.uri %}
                                    active
                                {% endif %}
                        ">
                    {% elseif menuItem.depth == menuItems|length %}
                        <li class="btn last
                                {% if (conference.id ~ "/" ~ menuItem.page.id) in app.request.uri %}
                                    active
                                {% endif %}
                        ">
                    {% else %}
                        <li class="btn
                                {% if (conference.id ~ "/" ~ menuItem.page.id) in app.request.uri %}
                                    active
                                {% endif %}
                        ">
                    {% endif %}
                    <a href="{{ path('cgg_conference_detailConference', {'idConference': conference.id, 'idPage':menuItem.page.id}) }}"> {{ menuItem.title }}</a>
                    <ul class="backgroundcolor">
                        {% for menuItemChild in menuItem.children  %}
                            {% if menuItem.depth == 1 %}
                            <li class="btn first
                                        {% if (conference.id ~ "/" ~ menuItem.page.id) in app.request.uri %}
                                            active
                                        {% endif %}
                                ">
                            {% elseif menuItem.depth == menuItems|length %}
                                <li class="btn last
                                        {% if (conference.id ~ "/" ~ menuItem.page.id) in app.request.uri %}
                                            active
                                        {% endif %}
                                    ">
                            {% else %}
                                <li class="btn
                                        {% if (conference.id ~ "/" ~ menuItem.page.id) in app.request.uri %}
                                            active
                                        {% endif %}
                                    ">
                            {% endif %}
                            <a href="{{ path('cgg_conference_detailConference', {'idConference': conference.id, 'idPage':menuItemChild.page.id}) }}"> {{ menuItemChild.title }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                    </li>
                {% endif %}
            {% endfor %}
            {% block addMenuItem %}
            {% endblock %}
        </ul>
    </div>
{% endblock %}

{% block contentText %}
    <div>
        {{ parent() }}
    </div>
{% endblock %}

{% block footerText %}
    <footer class="backgroundcolor">
        <p>{{ parent() }}</p>
    </footer>
{% endblock %}

