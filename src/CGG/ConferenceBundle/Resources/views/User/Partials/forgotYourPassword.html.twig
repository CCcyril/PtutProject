<div class="modal fade" id="forgotYourPasswordModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Mot de passe oubli√©</h4>
            </div>
            <div class="modal-body">
                <div class='row'>
                    <div class="col-md-12">
                        <div id="reponse"></div>
                        <div class="form-group">
                            <label>Votre adresse email</label>
                            <input type="email" class="form-control" id="email"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                <button type="button" class="btn btn-primary" id="savePassword">Envoyer</button>
            </div>
        </div>
    </div>
</div>
<script>
    $("#savePassword").click(function(){
        var email = $("#email").val();
        var url = "{{ path('cgg_conference_forgot_your_password') }}";
        $.ajax({
            type: "POST",
            url: url,
            data: {
                'email': email
            },
            dataType: "json",
            success: function(json){
                if(json['emailValid'] == false){
                    $("#reponse").empty();
                    $("#reponse").append('<div class="alert alert-danger" role="alert"><i class="fa fa-warning"></i> Votre email n\'existe pas</div>');
                }else{
                    $("#reponse").empty();
                    $("#reponse").append('<div class="alert alert-danger" role="alert">'+json['password']+'</div>');
                }
            }
        });
    });
</script>


