<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Réglage de votre site</h4>
            </div>
            <div class="modal-body" id="conference_id" data-id="{{ conference.id }}">
                <h3>Couleur prinicpal de votre site</h3>
                <div>
                    <input class="form-control" type="text" id="mainColor" value="{{ conference.mainColor }}"/>
                </div>
                <h3>Couleur secondaire de votre site</h3>
                <div>
                    <input class="form-control" type="text" id="secondaryColor" value="{{ conference.secondaryColor }}"/>
                </div>
                <h3>Adresse email pour le formulaire de contact</h3>
                <div>
                    <input class="form-control" type="text" id="emailContact" value="{{ conference.emailContact }}"/>
                </div>
                <div class="btn-group btn-group-justified btn-add-pages">
                    <div class="btn-group"><a href="{{ path('cgg_conference_admin_addMenuItem', {'idConference':conference.id}) }}" class="btn btn-primary">Ajouter une page</a></div>
                    <div class="btn-group"><button id="btnAddPages" class="btn btn-primary">Ajouter plusieurs pages</button></div>
                </div>
                <div id="addPages" class="hidden">
                    <form action="">
                        <div class="form-group">
                            <label class="control-label">Nom de la catégorie :</label>
                            <input class="form-control" type="text"/>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Titre de la page :</label>
                            <input class="form-control" type="text"/>
                        </div>
                    </form>
                    <div class="btn-group">
                        <button id="addInput" class="btn btn-default"><span>+</span></button>
                        <button id="removeInput" class="btn btn-default"><span>-</span></button>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                <button type="button" class="btn btn-primary" id="saveSetting">Enregister</button>
            </div>
        </div>
    </div>
</div>
