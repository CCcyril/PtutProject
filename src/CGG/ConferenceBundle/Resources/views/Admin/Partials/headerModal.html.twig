<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Modal title</h4>
            </div>
            <div class="modal-body">
                <div class="btn-group btn-group-justified">
                    <div class="btn-group"><button id="btnUpdateBackground" class="btn btn-primary">Modifier le fond</button></div>
                    <div class="btn-group"><button class="btn btn-primary">Ajouter une page</button></div>
                    <div class="btn-group"><button id="btnAddPages" class="btn btn-primary">Ajouter plusieurs pages</button></div>
                </div>
                <div id="updateBackground" class="hidden">
                    <div id="updateBackgroundColor" class="input-group colorpicker-component demo demo-auto colorpicker-element ">
                        <input class="form-control" type="text" value="#00AABB"/>
                        <span class="input-group-addon"><i style="background-color: rgb(0, 170, 187);"></i></span>
                    </div>
                    <div id="updateBackgroundImage">
                        <input class="file-caption" type="file"/>
                    </div>
                </div>

                <div id="addPages" class="hidden">
                    <form action="">
                        <div class="form-group">
                            <label class="control-label">Nom de la cat√©gorie :</label>
                            <input class="form-control" type="text"/>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Titre de la page :</label>
                            <input class="form-control" type="text"/>
                        </div>
                    </form>
                    <div class="btn-group">
                        <button id="addInput" class="btn btn-default"><span>+</span></button>
                        <button id="removeInput" class="btn btn-default"><span>-</span></button>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
